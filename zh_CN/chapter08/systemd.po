#, no-wrap
msgid "<userinput remap=\"pre\">sed '181,$ d' -i src/resolve/meson.build</userinput>"
msgstr "<userinput remap=\"pre\">sed '181,$ d' -i src/resolve/meson.build</userinput>"

#. type: Content of: <sect1><sect2><para>
msgid ""
"Remove an unneeded group, <systemitem class=\"groupname\">render</"
